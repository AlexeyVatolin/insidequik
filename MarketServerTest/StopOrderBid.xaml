<Window x:Class="MarketServerTest.StopOrderBid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketServerTest"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{StaticResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="Новая стоп заявка" Height="300" Width="250" MaxWidth="300" MaxHeight="300">
    <Grid >

        <Button Content="Выставить стоп заявку" HorizontalAlignment="Left" Margin="21,209,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click"/>
        <TextBox x:Name="PriceBox" HorizontalAlignment="Left" Height="27" Margin="138,93,0,0" TextWrapping="Wrap" Text="230,05" VerticalAlignment="Top" Width="73" FontSize="14"
                 PreviewTextInput="PriceBox_PreviewTextInput" PreviewKeyDown="QuantityBoxAndPriceBox_PreviewKeyDown"/>
        <TextBox x:Name="Price2Box" HorizontalAlignment="Left" Height="27" Margin="138,122,0,0" TextWrapping="Wrap" Text="230" VerticalAlignment="Top" Width="73" FontSize="14"
                 PreviewTextInput="PriceBox_PreviewTextInput" PreviewKeyDown="QuantityBoxAndPriceBox_PreviewKeyDown"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,128,0,0" TextWrapping="Wrap" Text="Лимит" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TickerBox" HorizontalAlignment="Left" Height="26" Margin="138,18,0,0" TextWrapping="Wrap" Text="SBER" VerticalAlignment="Top" Width="73" FontSize="14" RenderTransformOrigin="0.505,-0.861" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,101,0,0" TextWrapping="Wrap" Text="Цена активации" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2" Width="124"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,24,0,0" TextWrapping="Wrap" Text="Бумага" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,63,0,0" TextWrapping="Wrap" Text="Операция" VerticalAlignment="Top" FontSize="14"/>
        <StackPanel HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="73" Margin="138,53,0,0" Grid.Column="1">
            <RadioButton Name="Buy" Content="Покупка" IsChecked="True"/>
            <RadioButton Name="Sell" Content="Продажа"/>
        </StackPanel>
        <TextBox x:Name="QuantityBox" HorizontalAlignment="Left" Height="27" Margin="138,149,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="73" FontSize="14"
                 PreviewTextInput="QuantityBox_PreviewTextInput" PreviewKeyDown="QuantityBoxAndPriceBox_PreviewKeyDown"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,155,0,0" TextWrapping="Wrap" Text="Количество" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
